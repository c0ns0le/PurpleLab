{
  "builders": [
    {
      "vnc_disable_password": true,
      "keep_registered": true,
      "remote_datastore": "{{user `esxi_datastore`}}",
      "remote_host": "{{user `esxi_host`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "remote_type": "esx5",
      "vm_name":"WindowsServer2019",
      "communicator": "winrm",
      "cpus": "{{ user `cpus` }}",
      "disk_adapter_type": "lsisas1068",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}"
      ],
      "guest_os_type": "windows9srv-64",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `memory` }}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "type": "vmware-iso",
      "version": 11,
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "winrm_username": "vagrant",
      "vmx_data": {
          "ethernet0.networkName": "{{user `esxi_network_with_dhcp_and_internet`}}"
        }
    }
  ],
  "provisioners": [
      {
        "type": "windows-shell",
        "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
        "scripts": [
          "../../Packer/scripts/vm-guest-tools.bat",
          "../../Packer/scripts/enable-rdp.bat"
        ]
      },
      {
        "type": "windows-restart"
      }
  ],
  "variables": {
    "cpus": "2",
    "disk_size": "61440",
    "headless": "false",
    "memory": "2048",
    "esxi_datastore": "",
    "esxi_host": "",
    "esxi_username": "",
    "esxi_password": "",
    "iso_url": "https://software-download.microsoft.com/download/pr/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
    "iso_checksum": "3022424f777b66a698047ba1c37812026b9714c5",
    "autounattend": "../../Packer/answer_files/2019/Autounattend.xml"
  }
}
